{
	"name": "schlaus/tagline",
	"description": "Tagline takes a tag and a file, and tells you if the tag is found in the file, and on which line.",
	"keywords": [
		"tagline",
		"tagging",
		"testing"
	],
	"homepage": "https://github.com/schlaus/tagline",
	"license": "MIT",
	"authors": [
		{
			"name": "Klaus Karkia",
			"email": "klaus@karkia.me",
			"homepage": "schlaus.karkia.me",
			"role": "Developer"
		}
	],
	"require": {
		"php" : ">=5.3.0"
	},
	"autoload": {
		"psr-4": {
			"Schlaus\\Tagline\\": "src/"
		}
	},
	"require-dev": {
		"phpunit/phpunit": "4.6.*",
		"satooshi/php-coveralls": "dev-master"
	},
	"autoload-dev": {
		"psr-4": {
			"Schlaus\\Tagline\\Test\\": "tests"
		}
	},
	"scripts": {
		"test": "phpunit"
	}

}